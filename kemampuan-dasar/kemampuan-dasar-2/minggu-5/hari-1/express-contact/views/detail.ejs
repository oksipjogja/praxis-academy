<div class="container mt-3">
    <div class="row">
        <div class="col-md-8"></div>
        <h2>Detail Contact</h2>
        <% if (!contact) { %>
            <div class="alert alert-danger fw-bold" role="alert">
                Data contact mboten wonten.<br />
                <a href="/contact" class="alert-link fw-normal">&laquo; wangsul nang contact</a>
            </div>
            <% } else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= contact.nama %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <%= contact.nohp %>
                        </h6>
                        <p class="card-text">
                            <%= contact.email %>
                        </p>
                        <a href="/contact" class="card-link">&laquo; Wangsul nang pelataran contact</a>
                    </div>
                </div>
                <% } %>
    </div>
</div>